@inherits LayoutComponentBase
@inject HttpClient Http
@inject ISessionService SessionService
@using BlazorAppWeb.Components.Pages

<div class="page">

    <main>
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm box-shadow mb-3"
                style="background-color: transparent;">
                <div class="container">
                    <a class="navbar-brand" href="/">
                        <img src="/images/bikepacking_fiets.png" alt="WebShop"
                            style="height: 50px; width: auto; margin-right: 10px;">
                        WebShop
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false"
                        aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                        @* Nog logica toevoegen alleen weergeven wanneer ingelogd *@

                        @if (SessionService.CurrentCustomer != null)
                        {
                            <a href="/cart" class="text-dark nav-link btn btn-link border-0 p-0 mx-5"><i
                                    class="fas fa-shopping-cart"></i></a>
                            <LogoutComponent />

                        }

                    </div>
                </div>
            </nav>
        </header>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>

